---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }} - Blog</title>
    <description>{{ site.description }} - Blog posts and company updates</description>
    <link>{{ site.url }}/blog/</link>
    <atom:link href="{{ site.url }}/feed-blog.xml" rel="self" type="application/rss+xml" />
    <language>en-us</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>

    {% for post in site.posts limit:20 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <description>{{ post.excerpt | strip_html | xml_escape }}</description>
      <link>{{ site.url }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <category>Blog</category>
      {% if post.author %}
      <author>{{ post.author | xml_escape }}</author>
      {% endif %}
      {% if post.image %}
      <enclosure url="{{ site.url }}{{ post.image }}" type="image/jpeg" />
      {% endif %}
    </item>
    {% endfor %}

  </channel>
</rss>
