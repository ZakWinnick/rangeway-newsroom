---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }} - Press Releases</title>
    <description>Official press releases from {{ site.organization.name }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/press/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed-press.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for release in site.press_releases reversed limit:20 %}
      {% if release.date <= site.time %}
      <item>
        <title>{{ release.title | xml_escape }}</title>
        <description>{{ release.content | xml_escape }}</description>
        <pubDate>{{ release.date | date_to_rfc822 }}</pubDate>
        <link>{{ site.url }}{{ release.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ release.url }}</guid>
        {% if release.description %}
        <description>{{ release.description | xml_escape }}</description>
        {% endif %}
        {% if release.image %}
        <enclosure url="{{ site.url }}{{ release.image }}" type="image/jpeg" />
        {% endif %}
      </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>
